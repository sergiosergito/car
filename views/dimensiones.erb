    <title>Proyecto Primera Iteracion</title>

</head>
<body>
    <div id="container">
        <div id="content">
        <h1>Mostrando la Tabla </h1>
          
            <% if @dimx.to_i == 0 || @dimy.to_i == 0 || @dimx.to_i < 0 || @dimy.to_i < 0%>
                <h4> Ooops! Hubo un error con las dimensiones del Terreno</h4>
                  <form method = 'get' action='/createTerrain'>
                        <input type = 'submit' value = 'Â¡Entendido!'>
                  </form>
           <% else %>
            <p>Terreno Creado :: <%= @dimx %> x <%= @dimy %></p>
                <table border="1">
                    <% for row in 0..@dimy-1 do  %>
                        <tr>
                            <%for col in 0..@dimx-1 do %>
                                <td> <%="___"%> </td>
                            <% end %>
                        </tr>
                    <% end %>
                </table>                  
                <form method = 'get' action='/setCarPosition'>
                    <input type = 'submit' value = 'Siguiente'>
                </form>
                <form method = 'get' action='/createTerrain'>
                    <input type = 'submit' value = 'Anterior'>
                </form>

            <% end %>


        </div>
    </div>
</body>
</html>

